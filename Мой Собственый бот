@dp.message(F.text.lower() == "мне нужно купить аккаунт steam")
async def cmd_random(message: types.Message):
    builder = InlineKeyboardBuilder()
    builder.add(types.InlineKeyboardButton(
        text="Спс ему не скам",
        url='https://funpay.com/users/4430692/')
    )
    await message.answer(
        "Нажмите на кнопку, чтобы Купить аккаунт Steam",
        reply_markup=builder.as_markup()
    )


@dp.message(F.text.lower() == "мне нужно потратить мои деньги")
async def without_puree(message: types.Message):
    builder = InlineKeyboardBuilder()
    builder.add(types.InlineKeyboardButton(
        text="Купи в пару раз дороже",
        url='https://playerok3.com/')
    )
    await message.answer(
        "Нажмите на кнопку, чтобы Купить в пару раз дороже",
        reply_markup=builder.as_markup()
    )


@dp.message(F.text.lower() == "мне нужен самый крутой продавец на funpay")
async def without_puree(message: types.Message):
    builder = InlineKeyboardBuilder()
    builder.add(types.InlineKeyboardButton(
        text="самый крутой продавец на фан пей",
        url='https://funpay.com/users/9182005/')
    )
    await message.answer(
        "Нажмите на кнопку, чтобы Купить в пару раз дороже",
        reply_markup=builder.as_markup()
    )


# Хэндлер на команду /help
@dp.message(Command("help"))
async def cmd_help(message: types.Message):
    await message.answer("Помощи не будет")


# Запуск процесса поллинга новых апдейтов
async def main():
    await dp.start_polling(bot)


if __name__ == "__main__":
    asyncio.run(main())
